<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/element_spacing_normal"
              android:paddingLeft="@dimen/element_spacing_large"
              android:paddingRight="@dimen/element_spacing_large"
              android:paddingTop="@dimen/element_spacing_normal">


    <android.support.v7.widget.CardView
        android:id="@+id/project_item_card"
        style="@style/AppTheme.ProjectItem.CardView"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="@android:color/white"
        cardview:cardCornerRadius="@dimen/cardview_default_radius"
        cardview:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/element_spacing_normal"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal"
            android:paddingTop="@dimen/element_spacing_normal">

            <TextView
                android:id="@+id/translated_item_translated_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                tools:text="translated text"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/view_size_tiny"
                android:layout_height="@dimen/view_size_tiny"
                android:layout_below="@+id/translated_item_translated_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_translate_exchange_primary_48dp"/>

            <TextView
                android:id="@+id/translated_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/element_spacing_small"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_medium"
                tools:text="original text"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>