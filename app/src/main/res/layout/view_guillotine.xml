<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu_white_24dp" />

        <com.hosshan.android.kodic.component.widget.CanaroTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/guillotine_title"
            android:textColor="@color/primary_text_inverse"
            android:textSize="@dimen/guillotine_item_text_size" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/guillotine_layout_login"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_lock_open_white_24dp" />

        <com.hosshan.android.kodic.component.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_menu_login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/guillotine_layout_license"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_copyright_white_24dp" />

        <com.hosshan.android.kodic.component.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/guillotine_menu_license" />
    </LinearLayout>

</LinearLayout>
